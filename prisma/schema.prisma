generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


enum UserRole {
  USER
  ADMIN
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  username  String    @unique
  password  String
  role      UserRole  @default(USER)
  refreshToken String? @unique
  createdAt DateTime  @default(now())
}

model Post {
   id        String    @id @default(uuid())
   text      String    
   userId    String    @unique
}
